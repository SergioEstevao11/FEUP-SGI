<sxs>
    <scene root="demoRoot" axis_length="5"/>

    <views default="defaultCamera">
        <perspective id="defaultCamera" near="0.1" far="500" angle="45">
            <from x="30" y="15" z="30" />
            <to x="0" y="-2" z="0" />
        </perspective>
    </views>

    <ambient>
        <ambient r="0.5" g="0.5" b="0.5" a="1.0" />
        <background r="0.1" g="0.1" b="0.7" a="1.0" />
    </ambient>

    <lights>
        <omni id="demoLight" enabled="1">
            <location x="9.8" y="11.9" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
        <omni id="demoLight2" enabled="1">
            <location x="-9.8" y="12" z="10" w="1.0" />
            <ambient r="0" g="0" b="0" a="1.0" />
            <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
            <specular r="1.0" g="1.0" b="1.0" a="1.0" />
        </omni>
    </lights>

    <!-- not yet implemented -->
    <textures>
        
        <texture id="demoTexture" file="scenes/images/vidral.jpg" />
    </textures>
    

    <materials>
        <material id="red" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="1.0" g="0.0" b="0.0" a="1.0" />
            <diffuse r="1.0" g="0.0" b="0.0" a="1.0" />
            <specular r="0.6" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="green" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0" g="0.4" b="0" a="1.0" />
            <diffuse r="0" g="0.4" b="0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="greenDark" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0" g="0.3" b="0" a="1.0" />
            <diffuse r="0" g="0.3" b="0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="beige" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.93" g="0.9" b="0.63" a="1.0" />
            <diffuse r="0.93" g="0.9" b="0.63" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        <material id="brown" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.4" g="0.2" b="0" a="1.0" />
            <diffuse r="0.4" g="0.2" b="0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
        
        <material id="sunLight" shininess="10">
            <emission r="0.8" g="0.8" b="0.0" a="1.0" />
            <ambient r="0.8" g="0.8" b="0" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
         <material id="smoke" shininess="10">
            <emission r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.3" g="0.3" b="0.3" a="1.0" />
            <diffuse r="0.3" g="0.3" b="0.3" a="1.0" />
            <specular r="0.0" g="0.0" b="0.0" a="1.0" />
        </material>
    </materials>

    <transformations>
        <transformation id="gardenTransform">
           <rotate axis="x" angle="90" /> 
        </transformation>
        <transformation id="groundTransform">
            <rotate axis="x" angle="-90" />
            <scale x="20" y ="10" z="1" />
        </transformation>
    </transformations>

    <primitives>
        <primitive id="demoRectangle">
            <rectangle x1="-0.5" y1="-1" x2="0.5" y2="1" />
        </primitive>

        <primitive id="demoTriangle">
            <triangle x1="1" y1="0" z1="0"
                        x2="-1" y2="0" z2="0"
                        x3="0" y3="0" z3="1" />
        </primitive>

        <primitive id="demoSphere">
            <sphere radius="1" slices="30" stacks="30" />
        </primitive>

        <primitive id="demoCone">
            <cylinder base="0.3" top="0" height="3" slices="50" stacks="50"  />
        </primitive>

        <primitive id="demoCylinder">
            <cylinder base="0.3" top="0.3" height="3" slices="50" stacks="50"  />
        </primitive>
    	<primitive id="demoTorus">
            <torus inner="0.5" outer="7" slices="50" loops="50" />
        </primitive>
    </primitives>

    <components>
        <component id="ground">
            <transformation>
                <transformationref id="groundTransform" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="green" />
            </materials>
            <children>
                 <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="garden">
            <transformation>
                <transformationref id="gardenTransform" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="green" />
            </materials>
            <children>
                <primitiveref id="demoTorus" />
            </children>
        </component>

        <component id="front_wall">
             <transformation>
               <translate x="0" y="1" z="2"/>
               <scale x="3" y="1" z="1" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="beige" />
            </materials>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="front_door">
             <transformation>
               <translate x="0" y="0.7" z="2.01"/>
               <scale x="1" y="0.7" z="1" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="red" />
            </materials>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>
        
        <component id="front_roof">
            <transformation>
               <translate x="0" y="2" z="2"/>
               <rotate axis="x" angle="-90"/>
               <scale x="1.5" y="1" z="1.5" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="red" />
            </materials>
            <children>
                <primitiveref id="demoTriangle" />
            </children>
        </component>

        <component id="side_wall">
             <transformation>
                <rotate axis="y" angle="90"/>
               <translate x="0" y="1" z="1.5"/>
               <scale x="4" y="1" z="1" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="beige" />
            </materials>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="side_roof">
             <transformation>
                <rotate axis="y" angle="90"/>
                <rotate axis="x" angle="-45"/>
               <translate x="0.0" y="1.3" z="2.5"/>
               <scale x="5" y="1.2" z="1.2" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="red" />
            </materials>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="side_wall_far">
             <transformation>
                <rotate axis="y" angle="-90"/>
               <translate x="0" y="1" z="1.5"/>
               <scale x="4" y="1" z="1" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="beige" />
            </materials>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="side_roof_far">
             <transformation>
                <rotate axis="y" angle="-90"/>
                <rotate axis="x" angle="-45"/>
               <translate x="0.0" y="1.3" z="2.5"/>
               <scale x="5" y="1.2" z="1.2" />
    
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="red" />
            </materials>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>

        <component id="back_wall">
             <transformation>
              <translate x="0" y="1" z="-2"/>
               <scale x="-3" y="1" z="1" />    
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="beige" />
            </materials>
            <children>
                <primitiveref id="demoRectangle" />
            </children>
        </component>
        
         <component id="back_roof">
            <transformation>
               <translate x="0" y="2" z="-2"/>
               <rotate axis="x" angle="-90"/>
               <scale x="1.5" y="1" z="1.5" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="red" />
            </materials>
            <children>
                <primitiveref id="demoTriangle" />
            </children>
        </component>

        <component id="treeBase">
             <transformation>
              <translate x="4" y="0" z="3"/>
              <rotate axis="x" angle="-90" />
              <scale x="1" y="1" z="1.2" />
               
            </transformation>
            <texture id="demoTexture"/>
            
            <materials>
                <material id="brown" />
            </materials>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="treeBase2">
            <transformation>
              <translate x="-3" y="0" z="-3"/>
              <rotate axis="x" angle="-90" />
              <scale x="1" y="1" z="0.5" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="brown" />
            </materials>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>

        <component id="treeTop">
             <transformation>
                <translate x="4" y="3" z="3"/>
              <scale x="1.5" y="1.5" z="1.5" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="greenDark" />
            </materials>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="tree2Top">
             <transformation>
                <rotate axis="x" angle="-90" />
                <translate x="-3" y="3" z="1"/>
                <scale x="3" y="3" z="1" />
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="greenDark" />
            </materials>
            <children>
                <primitiveref id="demoCone" />
            </children>
        </component>
        
        <component id="chimney">
            <transformation>
                 <rotate axis="x" angle="-90" />
                <translate x="0.7" y="1.4" z="2"/>
                <scale x="1" y="1" z="0.7"/>
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="red" />
            </materials>
            <children>
                <primitiveref id="demoCylinder" />
            </children>
        </component>
        <component id="chimneySmoke">
            <transformation>
                 <rotate axis="x" angle="-90" />
                <translate x="0.7" y="1.4" z="4"/>
                <scale x="1" y="1" z="1"/>
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="smoke" />
            </materials>
            <children>
                <primitiveref id="demoCone" />
            </children>
        </component>

        <component id="Sun">
            <transformation>
                <translate x="-4" y="5" z="-2"/>
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="sunLight" />
            </materials>
            <children>
                <primitiveref id="demoSphere" />
            </children>
        </component>

        <component id="demoRoot">
            <transformation>
            </transformation>
            <texture id="demoTexture"/>
            <materials>
                <material id="red" />
            </materials>
            <children>
                <componentref id="ground"/>
                <componentref id="garden"/>
                <componentref id="front_wall"/>
                <componentref id="front_door"/>
                <componentref id="front_roof"/>
                <componentref id="side_wall"/>
                <componentref id="side_roof"/>
                <componentref id="side_wall_far"/>
                <componentref id="side_roof_far"/>
                <componentref id="back_wall"/>
                <componentref id="back_roof"/>
                <componentref id="treeBase"/>
                <componentref id="treeBase2"/>
                <componentref id="treeTop"/>
                <componentref id="tree2Top"/>
                <componentref id="chimney"/>
                <componentref id="chimneySmoke"/>
                <componentref id="Sun"/>          
            </children>
        </component>
        

    </components>
</sxs>